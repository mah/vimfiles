# Comment block
snippet comment
	<# ${1:comment} #>

# Do until
snippet dou
	do
	{
		${2:# body...}
	}
	until (${1:$x -gt 0})

# Do while
snippet dow
	do
	{
		${2:# body...}
	}
	while (${1:$x -gt 0})

# For loop
snippet for
	for ($${1:var} = 0; $$1 < $${2:count}; $$1${3:++}) {
	{ 
		${4:# body...}
	}

# Foreach loop
snippet foreach
	foreach ($${1:item} in $${2:collection})
	{
		${3:# body...}
	}

# Function
snippet fun
	function ${1:MyFunction} (${2:$param1, $param2})
	{
		${3:# body...}
	}

# If then statement
snippet ift
	if (${1:$x -gt $y})
	{
		${2:# if part}
	}
	
# If then else statement
snippet ifte
	if (${1:$x -gt $y})
	{
		${2:# if part}
	}
	else
	{
		${3:# else part}
	}

# Switch statement
snippet switch
	switch ($${1:var})
	{
		${2:<# value, scriptblock, Default #>} {
			${3}
		}
	}

# Try catch finally
snippet trycf
	try
	{
		1/0
	}
	catch [DivideByZeroException]
	{
		Write-Host "Divide by zero exception"
	}
	catch [System.Net.WebException], [System.Exception]
	{
		Write-Host "Other exception"
	}
	finally
	{
		Write-Host "cleaning up ..."
	}

# Try catch
snippet tryf
	try
	{
		${1:# body}
	}
	finally
	{
		${2:# clean up}
	}

# while
snippet while
	while (${1:$x -gt 0})
	{
		${2}
	}
